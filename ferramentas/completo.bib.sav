  groups    = {Experiencia},
  isbn      = {978-1-4503-4188-2},
  keywords  = {Agile, lean, process selection, software development context, software development process, rank2},
  location  = {Austin, Texas},
  numpages  = {5},
  url       = {http://doi.acm.org/10.1145/2904354.2904368},
}

